<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.example.cdgal.proyecto_ingsoft.AddParticular"
    android:background="@drawable/formulario2">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical" >

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="50dp"
                android:layout_marginRight="50dp"
                android:gravity="center"
                android:paddingTop="120sp"
                android:text="INGRESAR UN NUEVO USUARIO PARTICULAR"
                android:textColor="#091F34"
                android:textSize="16sp"
                android:textStyle="bold" />

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="50dp"
                android:layout_marginRight="50dp"
                android:layout_marginTop="25dp"
                android:baselineAligned="true"
                android:orientation="horizontal">

                <EditText
                    android:id="@+id/nombre"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="12"
                    android:hint="Nombre"
                    android:textColorHint="#607687"
                    android:textColor="#091F34"
                    android:textSize="16sp"/>

            </LinearLayout>

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="50dp"
                android:layout_marginRight="50dp"
                android:baselineAligned="true"
                android:orientation="horizontal">

                <EditText
                    android:id="@+id/usuario"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="12"
                    android:hint="Correo Electrónico"
                    android:textColorHint="#607687"
                    android:textColor="#091F34"
                    android:textSize="16sp" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="50dp"
                android:layout_marginRight="50dp"
                android:baselineAligned="true"
                android:orientation="horizontal">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">
                    <EditText
                        android:id="@+id/password"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:hint="Contraseña"
                        android:textColorHint="#607687"
                        android:textColor="#091F34"
                        android:inputType="textPassword"/>
                    <Button
                        android:id="@+id/eyeButton"
                        android:layout_width="30dp"
                        android:layout_height="30dp"
                        android:layout_marginRight="10dp"
                        android:layout_alignParentRight="true"
                        android:background="@drawable/ic_remove_red_eye_black_24dp"/>
                    />
                </RelativeLayout>

            </LinearLayout>

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="60dp"
                android:layout_marginRight="60dp"
                android:layout_marginTop="50dp"
                android:baselineAligned="true"
                android:orientation="horizontal">

                <Button
                    android:id="@+id/btn_fechaI"
                    android:layout_width="35dp"
                    android:layout_height="45dp"
                    android:layout_weight="5"
                    android:background="@drawable/shadow_blue"
                    android:text="Ingresar"
                    android:textColor="@android:color/white" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text=""
                    android:layout_weight="2"
                    android:textColor="@android:color/white" />

                <Button
                    android:id="@+id/btn_horaI"
                    android:layout_width="35dp"
                    android:layout_height="45dp"
                    android:layout_weight="5"
                    android:background="@drawable/shadow_red"
                    android:text="Cancelar"
                    android:textColor="@android:color/white"
                    android:onClick="llamarIniciarSesion"/>

            </LinearLayout>

        </LinearLayout>

    </ScrollView>

</LinearLayout>
